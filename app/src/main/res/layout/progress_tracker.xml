<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TableLayout
            android:layout_width="match_parent"
            android:layout_height="80sp">

            <TableRow android:layout_height="131dp">

                <ImageButton
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_margin="20sp"
                    android:background="@drawable/border_pt"
                    android:backgroundTint="#D7D5D5" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="[ Your NAME ]"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:paddingLeft="150sp"
                    android:paddingTop="10sp"
                    android:textStyle="bold"
                    />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:background="@drawable/border_pt"
            android:backgroundTint="#D5E3EF"
            android:orientation="vertical"
            android:padding="30sp">

            <!--        <ProgressBar-->
            <!--            android:layout_width="100sp"-->
            <!--            android:layout_height="100sp"-->

            <!--            />-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="OVERALL"
                        android:textColor="#3F51B5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/circle"
                        android:backgroundTint="#4CAF50"
                        android:orientation="vertical"
                        android:padding="30sp" />

                </TableRow>

            </TableLayout>

            <ProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/custom_progress_bar"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress_bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="50%"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:background="@drawable/border_pt"
            android:backgroundTint="#D5E3EF"
            android:orientation="vertical"
            android:padding="30sp">

            <!--        <ProgressBar-->
            <!--            android:layout_width="100sp"-->
            <!--            android:layout_height="100sp"-->

            <!--            />-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="Atendance"
                        android:textColor="#3F51B5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/circle"
                        android:backgroundTint="#4CAF50"
                        android:orientation="vertical"
                        android:padding="30sp" />

                </TableRow>

            </TableLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_bar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="50%"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:background="@drawable/border_pt"
            android:backgroundTint="#D5E3EF"
            android:orientation="vertical"
            android:padding="30sp">

            <!--        <ProgressBar-->
            <!--            android:layout_width="100sp"-->
            <!--            android:layout_height="100sp"-->

            <!--            />-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="Marks"
                        android:textColor="#3F51B5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/circle"
                        android:backgroundTint="#4CAF50"
                        android:orientation="vertical"
                        android:padding="30sp" />

                </TableRow>

            </TableLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_bar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="50%"
                android:textColor="#3F51B5"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:background="@drawable/border_pt"
                android:backgroundTint="#D5E3EF"
                android:orientation="vertical"
                android:padding="30sp">

                <!--        <ProgressBar-->
                <!--            android:layout_width="100sp"-->
                <!--            android:layout_height="100sp"-->

                <!--            />-->

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:text="Practicals"
                            android:textColor="#3F51B5"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginBottom="10sp"
                            android:background="@drawable/circle"
                            android:backgroundTint="#4CAF50"
                            android:orientation="vertical"
                            android:padding="30sp" />

                    </TableRow>

                </TableLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_bar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="50%"
                    android:textColor="#3F51B5"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

