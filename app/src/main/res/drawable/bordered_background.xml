<!-- res/drawable/bordered_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Change to your desired background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"/> <!-- Border color -->
            <corners android:radius="8dp"/> <!-- Rounded corners, adjust as needed -->
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/> <!-- Adjust for border thickness -->
        </shape>
    </item>
</layer-list>
